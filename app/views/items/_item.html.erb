<li class='list'>
  <%= link_to "#" do %>
  <div class='item-img-content'>
    <%= image_tag item.image, class: "item-img" %>
    <%# 商品が売れていればsold outを表示しましょう %>
    <% if true %>
      <div class='sold-out'>
        <span>Sold Out!!</span>
      </div>
    <% end %>
    <%# //商品が売れていればsold outを表示しましょう %>
  </div>
  <div class='item-info'>
    <h3 class='item-name'>
      <%= item.title %>
    </h3>
    <div class='item-price'>
      <span><%= "販売価格" %><%= item.price %>円<br><%= item.cost.name %></span>
      <div class='star-btn'>
        <%= image_tag "star.png", class:"star-icon" %>
        <span class='star-count'>0</span>
      </div>
    </div>
  </div>
  <% end %>
</li>
